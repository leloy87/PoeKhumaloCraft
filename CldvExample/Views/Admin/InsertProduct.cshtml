@model KhumaloeApp.Models.KhProducts

@if (Model.ProductId == 0)
{
    <h2>Insert New Product</h2>
}
else
{
    <h2>Edit Product</h2>
}

<form asp-action="@(Model.ProductId == 0 ? "InsertProduct" : "EditProduct")" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea class="form-control" id="Description" name="Description" required>@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" required>
    </div>
    <div class="form-group">
        <label for="Category">Category:</label>
        <input type="text" class="form-control" id="Category" name="Category" value="@Model.Category" required>
    </div>
    <div class="form-group">
        <label for="ImageUrl">Image URL:</label>
        <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" value="@Model.ImageUrl" required>
    </div>
    <div class="form-group">
        <label for="Availability">Availability:</label>
        <select class="form-control" id="Availability" name="Availability" required>
            <option value="true" selected="@Model.Availability">Available</option>
            <option value="false" selected="@(!Model.Availability)">Not Available</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">@(Model.ProductId == 0 ? "Add Product" : "Save Changes")</button>
</form>

<a asp-controller="Admin" asp-action="ViewProducts" class="btn btn-secondary mt-3">Back to Product List</a>

@if (Model.ProductId != 0)
{
    <form asp-action="DeleteProduct" method="post" class="mt-3" onsubmit="return confirm('Are you sure you want to delete this product?');">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger">Delete Product</button>
    </form>
}