@model List<KhumaloeApp.Models.Order>

@{
    ViewData["Title"] = "View Orders";
}

<h2>View Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>
                    @if (order.Status == OrderStatus.Pending)
                    {
                        <a asp-action="ProcessOrder" asp-route-id="@order.OrderId" class="btn btn-primary">Process</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>