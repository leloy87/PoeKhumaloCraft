 @model KhumaloeApp.Models.Cart

<h2>Cart</h2>

@if (Model.CartItem != null && Model.CartItem.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItem)
            {
                <tr>
                    <td>@item.KhProducts.Name</td>
                    <td>@item.Quantity</td>
                    <td>R@(item.KhProducts.Price)</td>
                    <td>R@(item.Quantity * item.KhProducts.Price)</td>
                    <td>
                        <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="CartItemId" value="@item.CartItemId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <h4>Total Price: R@(Model.TotalPrice)</h4>
        <a asp-controller="Order" asp-action="PlaceOrder" class="btn btn-primary">Place Order</a>
    </div>
}
else
{
    <p>No items in the cart.</p>
}