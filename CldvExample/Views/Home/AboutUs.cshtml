@{
    ViewData["Title"] = "AboutUs";
}

<!-- Include CSS -->
<style>
    .about-us-content {
        padding: 30px;
        background-color: #fff;
        margin-bottom: 30px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

        .about-us-content h1 {
            color: #333;
            font-size: 32px;
            margin-bottom: 20px;
        }

        .about-us-content p {
            color: #666;
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 15px;
        }

    .about-us-img {
        border-radius: 10px;
        overflow: hidden;
        border: 5px solid #fff;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

        .about-us-img img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

    .swiper-container {
        width: 100%;
        height: 100%;
    }

    .swiper-slide img {
        width: 100%;
        height: auto;
    }
</style>


<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<!-- about us section -->
<div class="container">
    <div class="row">
        <div class="col-lg-7">
            <div class="about-us-content">
                <h1>About Us</h1>
                <p>Welcome to KhumaloCraft Emporium, where creativity meets tradition to bring you exquisite handcrafted treasures from the heart of Africa.</p>
                <p>KhumaloCraft Emporium is a visionary e-commerce platform established by James Khumalo. We are passionate about connecting talented artisans worldwide with a discerning audience who appreciates handcrafted treasures.</p>
                <p>Established with a passion for celebrating the rich cultural heritage of the continent, KhumaloCraft Emporium is more than just a marketplace; it's a gateway to the vibrant soul of Africa. Our artisans, hailing from diverse backgrounds and regions, infuse their craftsmanship with generations of tradition, resulting in unique pieces that tell stories of history, craftsmanship, and identity.</p>
                <p>We are committed to providing a seamless and enjoyable shopping experience for our customers, ensuring ethical sourcing practices, and fostering a supportive community for artisans.</p>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="about-us-img swiper-container">
                <div class="swiper-wrapper">
                    <div class="swiper-slide"><img src="~/images/bag.jfif" alt="Slide 1"></div>
                    <div class="swiper-slide"><img src="~/images/slide3.jfif" alt="Slide 2"></div>
                    <div class="swiper-slide"><img src="~/images/slide4.jfif" alt="Slide 3"></div>


                </div>

                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
</div>
<!-- end about us section -->
<!-- Initialize Swiper -->
<script>
    var swiper = new Swiper('.swiper-container', {
        slidesPerView: 1,
        spaceBetween: 30,
        loop: true,
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },
        autoplay: {
            delay: 5000,
            disableOnInteraction: false,
        },
    });
</script>






