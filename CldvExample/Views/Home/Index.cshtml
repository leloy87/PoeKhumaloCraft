@{
    ViewData["Title"] = "Home Page";
}

<html>



<body>
    
    <!-- about section -->

    <section class="about_section layout_padding">
        <div class="container  ">
            <div class="row">
                <div class="col-md-6">
                    <div class="detail-box">
                        <div class="heading_container">
                            <h2>Welcome to <span> KhumaloCraft Emporium!</span></h2>
                        </div>
                        <p>
                            KhumaloCraft Emporium is the brainchild of visionary entrepreneur James Khumalo, who embarked on a mission to establish a global e-commerce platform showcasing exquisite handcrafted products.
                            With a passion for connecting artisans worldwide with a discerning audience, KhumaloCraft Emporium transcends the traditional online marketplace. It is a platform where craftsmanship converges
                            with creativity, offering artisans a distinguished platform to showcase their unique talents to a global audience.
                        </p>
                        <a href="">
                            Read More
                        </a>
                    </div>
                </div>
                <div class="col-md-6 ">
                    <div class="img-box">
                        <img src="images/wel.jfif" alt="Home page image" />
                    </div>
                </div>
            </div>
        </div>
    </section>


   
    <!-- service section -->

    <section class="service_section layout_padding">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>Our <span>Services</span></h2>
            </div>
            <div class="row">
                <div class="col-sm-6 col-md-4">
                    <div class="box" style="background-image: url('images/image4j.jfif');">
                        <div class="detail-box">
                            <h5>Handcrafted Jewelry Design</h5>
                            <p>Elevate your style with our exquisite handcrafted jewelry pieces, inspired by African heritage and meticulously crafted by skilled artisans.</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="box" style="background-image: url('images/image3p.webp');">
                        <div class="detail-box">
                            <h5>Artisanal Pottery Creations</h5>
                            <p>Experience the beauty of traditional pottery with our artisanal creations, each piece crafted with care and reflecting the essence of African culture.</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="box" style="background-image: url('images/image6t.jfif');">
                        <div class="detail-box">
                            <h5>Handwoven Textile Artwork</h5>
                            <p>Add a touch of elegance to your space with our handwoven textile artwork, showcasing intricate designs and vibrant colors inspired by African traditions.</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="box" style="background-image: url('images/image2.webp');">
                        <div class="detail-box">
                            <h5>Custom Woodworking Projects</h5>
                            <p>Transform your living space with our custom woodworking projects, crafted with precision and incorporating elements of African design and craftsmanship.</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="box" style="background-image: url('images/image5l.jfif');">
                        <div class="detail-box">
                            <h5>Artisanal Leather Goods</h5>
                            <p>Discover the timeless elegance of our artisanal leather goods, meticulously crafted with premium materials and inspired by African heritage.</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="box" style="background-image: url('images/image7f.jfif');">
                        <div class="detail-box">
                            <h5>Fine Art Printmaking Services</h5>
                            <p>Experience the art of printmaking with our fine art printmaking services, where each piece is created with passion and attention to detail, capturing the essence of African culture.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="btn-box">
                <a href="#">Read More</a>
            </div>
        </div>
    </section>

    <!-- contact section -->
    <section class="contact_section layout_padding">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="contact_form">
                        <h3>Contact Us</h3>
                        <form action="#" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Your Name" required>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Your Email" required>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" rows="5" placeholder="Message" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="contact_details">
                        <h3>Contact Details</h3>
                        <p><strong>Address:</strong> South Africa</p>
                        <p><strong>Phone:</strong> +1234567890</p>
                        <p><strong>Email:</strong> info@khumalocraftemporium.com</p>
                    </div>
                </div>
            </div>
        </div>

    </section>
</body>

</html>
