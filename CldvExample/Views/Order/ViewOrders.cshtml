@model List<KhumaloeApp.Models.Order>

<h2>My Orders</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate</td>
                    <td>R@(order.TotalAmount)</td>
                    <td><a asp-action="OrderDetails" asp-route-id="@order.OrderId">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}
